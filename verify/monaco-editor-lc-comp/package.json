{
  "name": "verify-monaco-editor-lc-comp",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "main": "index.html",
  "scripts": {
    "clean": "rimraf ./dist",
    "update-verify": "shx cp -r ../../packages/monaco-editor-lc-comp/dist ./verify-direct/monaco-editor-lc-comp",
    "clean-verify": "rimraf ./verify-direct/monaco-editor-lc-comp",
    "verify-direct": "npm run clean-verify && npm run update-verify && http-server --port 22003 ./verify-direct",
    "verify-vite": "vite --force --debug"
  },
  "dependencies": {
    "monaco-editor-lc-comp": "../../packages/monaco-editor-lc-comp"
  },
  "devDependencies": {
    "vite": "^2.8.6",
    "http-server": "^14.1.0",
    "shx": "^0.3.4",
    "rimraf":  "^3.0.2"
  }
}
