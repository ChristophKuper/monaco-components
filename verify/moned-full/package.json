{
  "name": "verify-moned-full",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "index.html",
  "scripts": {
    "clean": "rimraf ./dist",
    "update-verify": "cp-cli ../../packages/moned-full/dist ./verify-direct/moned-full",
    "clean-verify": "rimraf ./verify-direct/moned-full",
    "verify-direct": "npm run clean-verify && npm run update-verify && http-server --port 22002 ./verify-direct",
    "verify-vite": "vite --force --debug"
  },
  "dependencies": {
    "moned-full": "../../packages/moned-full"
  },
  "devDependencies": {
    "vite": "^2.8.1",
    "http-server": "14.1.0",
    "cp-cli": "^2.0.0",
    "rimraf":  "^3.0.2"
  }
}
