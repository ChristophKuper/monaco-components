{
  "name": "monaco-editor-comp",
  "version": "0.2.4",
  "license": "MIT",
  "description": "Lit Component for Monaco Editor",
  "keywords": [
    "monaco-editor",
    "lit",
    "web-component",
    "typescript"
  ],
  "type": "module",
  "main": "./dist/monaco-editor-comp.js",
  "module": "./dist/monaco-editor-comp.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/monaco-editor-comp.js",
      "types": "./dist/src/index.d.ts"
    },
    "./monaco-editor-comp-workers": {
      "import": "./dist/monaco-editor-comp-workers.js"
    },
    "./monaco-editor-comp-workers-vite": {
      "import": "./dist/monaco-editor-comp-workers-vite.js"
    }
  },
  "files": [
    "dist/assets",
    "dist/src",
    "dist/monaco-editor-comp*.js",
    "dist/style.css",
    "src",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "prepare": "npm run _build-workers",
    "clean": "shx rm -rf ./dist",
    "dev": "vite",
    "lint": "eslint src",
    "_build-workers": "vite -c vite.config.worker.ts build",
    "_build-main": "tsc && vite build",
    "copy-ttf": "shx cp ../../node_modules/monaco-editor/min/vs/base/browser/ui/codicons/codicon/codicon.ttf ./dist",
    "build": "npm run clean && npm run _build-main && npm run _build-workers && npm run copy-ttf",
    "serve": "tsc && vite preview"
  },
  "dependencies": {
    "lit": "^2.2.1",
    "monaco-editor": "^0.33.0"
  },
  "devDependencies": {
    "tslib": "^2.3.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TypeFox/monaco-components",
    "directory": "packages/monaco-editor-comp"
  },
  "homepage": "https://github.com/TypeFox/monaco-components/blob/main/packages/monaco-editor-comp/README.md",
  "bugs": "https://github.com/TypeFox/monaco-components/issues",
  "author": {
    "name": "TypeFox",
    "url": "https://www.typefox.io"
  }
}
