{
  "name": "monaco-editor-comp",
  "version": "0.3.0",
  "license": "MIT",
  "description": "Lit Component for Monaco Languageclient",
  "keywords": [
    "monaco-editor",
    "monaco-languageclient",
    "lit",
    "web-component",
    "typescript"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./bundle": {
      "import": "./dist/bundle/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/bundle/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "clean": "npx shx rm -rf ./dist ./build/dist ./src/generated tsconfig.tsbuildinfo",
    "lint": "eslint src",
    "copy:ttf": "npx shx mkdir -p ./dist/assets && npx shx cp -f ../../node_modules/monaco-editor/min/vs/base/browser/ui/codicons/codicon/codicon.ttf ./dist/assets",
    "create:css": "tsc -p ./build && node ./build/dist/buildAssets.js",
    "compile": "npm run create:css && tsc",
    "build": "npm run clean && npm run compile && vite --config vite.build.config.ts build && npm run copy:ttf"
  },
  "dependencies": {
    "monaco-editor": "0.33.0",
    "monaco-editor-workers": "0.33.0",
    "monaco-languageclient": "1.0.1",
    "@codingame/monaco-jsonrpc": "0.4.0",
    "lit": "^2.2.5",
    "normalize-url": "^7.0.3"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.67.0",
    "@types/glob-to-regexp": "^0.4.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TypeFox/monaco-components",
    "directory": "packages/monaco-editor-comp"
  },
  "homepage": "https://github.com/TypeFox/monaco-components/blob/main/packages/monaco-editor-comp/README.md",
  "bugs": "https://github.com/TypeFox/monaco-components/issues",
  "author": {
    "name": "TypeFox",
    "url": "https://www.typefox.io"
  }
}
