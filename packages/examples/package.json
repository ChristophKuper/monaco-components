{
  "name": "monaco-editor-wrapper-examples",
  "private": true,
  "type": "module",
  "devDependencies": {
    "monaco-editor-wrapper": "../monaco-editor-wrapper",
    "monaco-editor-comp": "../monaco-editor-comp",
    "monaco-editor-workers": "../monaco-editor-workers",
    "request-light": "^0.6.0",
    "vscode-uri": "^3.0.6",
    "vscode-languageserver": "^8.0.2",
    "vscode-json-languageservice": "^5.1.3",
    "http-server": "^14.1.1"
  },
  "volta": {
    "node": "16.18.1",
    "npm": "8.19.3"
  },
  "scripts": {
    "clean": "npx shx rm -rf ./dist ./libs tsconfig.tsbuildinfo",
    "lint": "eslint src --ext .ts",
    "compile": "tsc",
    "copy:prepare": "npx shx mkdir -p ./libs",
    "copy:wrapper": "npx shx cp -fr ../../packages/monaco-editor-wrapper/bundle ./libs/monaco-editor-wrapper",
    "copy:comp": "npx shx cp -fr ../../packages/monaco-editor-comp/bundle ./libs/monaco-editor-comp",
    "copy:workers": "npx shx cp -fr ../../packages/monaco-editor-workers/dist ./libs/monaco-editor-workers",
    "copy:all": "npm run copy:prepare && npm run copy:wrapper && npm run copy:comp && npm run copy:workers",
    "build:worker": "vite -c vite.config.worker.ts build",
    "build": "npm run clean && npm run compile && npm run build:worker && npm run copy:all",
    "start": "http-server --port 20002 ./"
  }
}
