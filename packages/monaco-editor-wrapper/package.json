{
  "name": "monaco-editor-wrapper",
  "version": "2.0.0-next.1",
  "license": "MIT",
  "description": "Monaco-Editor and Monaco Languageclient Wrapper",
  "keywords": [
    "monaco-editor",
    "monaco-languageclient",
    "typescript"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./allLanguages": {
      "types": "./dist/indexAllLanguages.d.ts",
      "default": "./dist/indexAllLanguages.js"
    },
    "./bundle": {
      "types": "./dist/index.d.ts",
      "default": "./bundle/index.js"
    },
    "./bundle/allLanguages": {
      "types": "./dist/indexAllLanguages.d.ts",
      "default": "./bundle/indexAllLanguages.js"
    },
    "./languagesOnly": {
      "types": "./dist/indexLanguagesOnly.d.ts",
      "default": "./dist/indexLanguagesOnly.js"
    },
    "./monaco-css": {
      "types": "./dist/generated/css.d.ts",
      "default": "./dist/generated/css.js"
    },
    "./themeRemoteHelper": {
      "types": "./lib/helpers/themeRemoteHelper.d.ts",
      "default": "./lib/helpers/themeRemoteHelper.js"
    },
    "./themeLocalHelper": {
      "types": "./lib/helpers/themeLocalHelper.d.ts",
      "default": "./lib/helpers/themeLocalHelper.js"
    }
  },
  "typesVersions": {
    "*": {
      ".": [
        "dist/index"
      ],
      "allLanguages": [
        "dist/indexAllLanguages"
      ],
      "bundle": [
        "dist/index"
      ],
      "bundle/allLanguages": [
        "dist/indexAllLanguages"
      ],
      "languagesOnly": [
        "dist/indexLanguagesOnly"
      ],
      "monaco-css": [
        "dist/helpers/css"
      ],
      "themeRemoteHelper": [
        "./lib/helpers/themeRemoteHelper.d.ts"
      ],
      "themeLocalHelper": [
        "./lib/helpers/themeLocalHelper.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "bundle",
    "src",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "clean": "npx shx rm -rf ./dist ./bundle ./src/generated ./resources *.tsbuildinfo",
    "handle:assets": "vite-node ./build/src/buildAssets.mts",
    "compile": "npm run handle:assets && tsc --build tsconfig.src.json",
    "bundle:main": "npx shx rm -rf bundle/generated && vite --config vite.bundle.config.ts build",
    "bundle:languages": "vite --config vite.languages.config.ts build",
    "bundle": "npm run bundle:main && npm run bundle:languages",
    "build": "npm run clean && npm run compile && npm run bundle"
  },
  "volta": {
    "node": "18.15.0",
    "npm": "9.6.3"
  },
  "dependencies": {
    "@types/css-font-loading-module": "~0.0.8",
    "monaco-languageclient": "5.0.1",
    "vscode-ws-jsonrpc": "3.0.0",
    "normalize-url": "~8.0.0"
  },
  "devDependencies": {
    "@types/glob-to-regexp": "~0.4.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TypeFox/monaco-components",
    "directory": "packages/monaco-editor-wrapper"
  },
  "homepage": "https://github.com/TypeFox/monaco-components/blob/main/packages/monaco-editor-wrapper/README.md",
  "bugs": "https://github.com/TypeFox/monaco-components/issues",
  "author": {
    "name": "TypeFox",
    "url": "https://www.typefox.io"
  }
}
