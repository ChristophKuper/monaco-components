{
  "name": "monaco-editor-lc-comp",
  "version": "0.3.0",
  "license": "MIT",
  "private": "true",
  "description": "Lit Component for Monaco Languageclient",
  "keywords": [
    "monaco-editor",
    "monaco-languageclient",
    "lit",
    "web-component",
    "typescript"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./bundle": {
      "import": "./dist/bundles/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "clean": "npx shx rm -rf ./dist ./build/dist tsconfig.tsbuildinfo",
    "lint": "eslint src",
    "copy-ttf": "npx shx cp -f ../../node_modules/monaco-editor/min/vs/base/browser/ui/codicons/codicon/codicon.ttf ./dist/assets",
    "copy-assets": "npx shx mkdir -p ./dist/assets && npm run copy-ttf",
    "create-css": "tsc -p ./build",
    "compile": "npm run copy-assets && npm run create-css && tsc",
    "build:vite": "vite --config vite.build.config.ts build",
    "build": "npm run clean && npm run compile && npm run build:vite"
  },
  "dependencies": {
    "monaco-editor": "0.33.0",
    "monaco-editor-workers": "0.33.0-next.3",
    "monaco-languageclient": "0.19.0-next.1",
    "@codingame/monaco-jsonrpc": "^0.3.1",
    "lit": "^2.2.1",
    "normalize-url": "^7.0.3"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.66.0",
    "@types/glob-to-regexp": "^0.4.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TypeFox/monaco-components",
    "directory": "packages/monaco-editor-lc-comp"
  },
  "homepage": "https://github.com/TypeFox/monaco-components/blob/main/packages/monaco-editor-lc-comp/README.md",
  "bugs": "https://github.com/TypeFox/monaco-components/issues",
  "author": {
    "name": "TypeFox",
    "url": "https://www.typefox.io"
  }
}
