    "typescript": "~4.9.4",
    "eslint": "~8.31.0",
    "editorconfig": "~1.0.1",
    "tslib": "~2.4.1",
    "shx": "~0.3.4"
  },
  "volta": {
    "node": "16.19.0",
    "npm": "8.19.3"
  },
  "workspaces": [
    "packages/monaco-editor-wrapper",
    "packages/monaco-editor-comp",
    "packages/monaco-editor-react",
    "packages/monaco-editor-workers",
