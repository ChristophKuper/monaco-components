  },
  "devDependencies": {
    "vite": "3.0.5",
    "path-browserify": "^1.0.1",
    "typescript": "^4.7.4",
    "eslint": "^8.21.0",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "editorconfig": "^0.15.3",
    "tslib": "^2.4.0",
    "shx": "^0.3.4"
  },
  "volta": {
    "node": "16.16.0",
    "npm": "8.16.0"
  },
  "workspaces": [
    "packages/monaco-editor-comp",
    "packages/monaco-editor-workers",
    "verify/monaco-editor-comp"
