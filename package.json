{
  "name": "monaco-components",
  "version": "0.2.0-dev",
  "files": [
    "lib"
  ],
  "type": "module",
  "scripts": {
    "clean": "npm run clean --workspaces",
    "dev-comp": "npm run dev --workspace packages/monaco-editor-comp",
    "dev-lc-comp": "npm run dev --workspace packages/monaco-editor-lc-comp",
    "lint": "npm run lint --workspaces",
    "build-comp": "npm run build --workspace packages/monaco-editor-comp",
    "build-lc-comp": "npm run build --workspace packages/monaco-editor-lc-comp",
    "build-all": "npm run build --workspaces",
    "verify-comp-direct": "cd verify/monaco-editor-comp/ && npm run verify-direct",
    "verify-comp-vite": "cd verify/monaco-editor-comp/ && npm run verify-vite",
    "verify-lc-comp-direct": "cd verify/monaco-editor-lc-comp/ && npm run verify-direct",
    "verify-lc-comp-vite": "cd verify/monaco-editor-lc-comp/ && npm run verify-vite",
    "verify-monaco-vite": "cd verify/monaco-editor/ && npm run verify-vite"
  },
  "dependencies": {
  },
  "devDependencies": {
    "lit": "^2.1.4",
    "vite": "^2.8.4",
    "typescript": "^4.5.5",
    "rimraf": "^3.0.2",
    "eslint": "^8.9.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "editorconfig": "^0.15.3"
  },
  "workspaces": [
    "packages/monaco-editor-comp",
    "packages/monaco-editor-lc-comp"
  ]
