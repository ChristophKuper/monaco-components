{
  "name": "monaco-components",
  "private": true,
  "scripts": {
    "clean": "npm run clean --workspaces",
    "clean:watch": "tsc --build tsconfig.build.json --clean",
    "dev": "vite",
    "dev:debug": "vite --debug --force",
    "watch": "tsc --build tsconfig.build.json --watch --verbose",
    "lint": "eslint {**/src/**/*.ts,**/src/**/*.tsx,**/test/**/*.ts,**/test/**/*.tsx}",
    "build:comp": "npm run build --workspace packages/monaco-editor-comp",
    "build:workers": "npm run build --workspace packages/monaco-editor-workers",
    "build": "npm run build --workspaces",
    "release:prepare": "npm i && npm run clean && npm run build"
  },
  "devDependencies": {
    "@types/node": "~18.15.11",
    "@types/shelljs": "~0.8.12",
    "@types/vscode": "~1.77.0",
    "@typescript-eslint/eslint-plugin": "~5.59.0",
    "@typescript-eslint/parser": "~5.59.0",
    "@vitest/coverage-c8": "~0.30.1",
    "@vitest/ui": "~0.30.1",
    "eslint": "~8.38.0",
    "editorconfig": "~1.0.2",
    "path-browserify": "~1.0.1",
    "shx": "~0.3.4",
    "shelljs": "~0.8.5",
    "tslib": "~2.5.0",
    "typescript": "~5.0.4",
    "vite": "~4.3.1",
    "vite-node": "~0.30.1",
    "vitest": "~0.30.1"
  },
  "volta": {
    "node": "18.16.0",
    "npm": "9.6.5"
  },
  "workspaces": [
    "packages/monaco-editor-wrapper",
    "packages/monaco-editor-react",
    "packages/monaco-editor-workers",
    "packages/examples"
  ]
}
