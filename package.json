{
  "name": "monaco-components",
  "private": true,
  "scripts": {
    "clean": "npm run clean --workspaces",
    "dev": "vite",
    "dev:debug": "vite --debug --force",
    "watch": "tsc --build tsconfig.build.json --watch --verbose",
    "lint": "eslint {**/src/**/*.ts,**/src/**/*.tsx,**/test/**/*.ts,**/test/**/*.tsx}",
    "build:comp": "npm run build --workspace packages/monaco-editor-comp",
    "build:workers": "npm run build --workspace packages/monaco-editor-workers",
    "build": "npm run build --workspaces",
    "release:prepare": "npm i && npm run clean && npm run build"
  },
  "devDependencies": {
    "@types/node": "~18.15.11",
    "@types/react": "~18.0.33",
    "@types/react-dom": "~18.0.11",
    "@types/vscode": "~1.76.0",
    "@typescript-eslint/eslint-plugin": "~5.57.1",
    "@typescript-eslint/parser": "~5.57.1",
    "@vitest/coverage-c8": "~0.29.8",
    "@types/shelljs": "~0.8.11",
    "@vitest/ui": "~0.29.8",
    "eslint": "~8.37.0",
    "editorconfig": "~1.0.2",
    "path-browserify": "~1.0.1",
    "shx": "~0.3.4",
    "shelljs": "~0.8.5",
    "tslib": "~2.5.0",
    "typescript": "~5.0.3",
    "vite": "~4.2.1",
    "vite-node": "~0.29.8",
    "vitest": "~0.29.8"
  },
  "volta": {
    "node": "18.15.0",
    "npm": "9.6.3"
  },
  "workspaces": [
    "packages/monaco-editor-wrapper",
    "packages/monaco-editor-react",
    "packages/monaco-editor-workers",
    "packages/examples"
  ]
}
